@model string
@using UniverseRestaurant.Utility

    <div style="width:100%">
        @if (ViewBag.Status == StaticDetail.StatusSubmitted)
        {
            <img src="~/images/OrderPlaced.png" width="100%" />
        }
        @if (ViewBag.Status == StaticDetail.StatusInProcess)
        {
            <img src="~/images/InKitchen.png" width="100%" />
        }
        @if (ViewBag.Status == StaticDetail.StatusReady)
        {
            <img src="~/images/ReadyForPickup.png" width="100%" />
        }
        @if (ViewBag.Status == StaticDetail.StatusCompleted)
        {
            <img src="~/images/completed.png" width="100%" />
        }
    </div>

<hr />
<a asp-action="OrderHistory" asp-controller="Order" class="btn btn-warning"><i class="far fa-list-alt"></i> Close</a>


